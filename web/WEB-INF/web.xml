<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>authUser</servlet-name>
        <servlet-class>controllers.authUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authUser</servlet-name>
        <url-pattern>/authUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerUser</servlet-name>
        <servlet-class>controllers.registerUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerUser</servlet-name>
        <url-pattern>/registerUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getItems</servlet-name>
        <servlet-class>controllers.getItems</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getItems</servlet-name>
        <url-pattern>/getItems</url-pattern>
    </servlet-mapping>

</web-app>